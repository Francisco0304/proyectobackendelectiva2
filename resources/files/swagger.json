{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "API de Libros",
    "description": "Documentaci√≥n de la API de Libros"
  },
  "host": "localhost:3000",
  "schemes": ["http"],
  "paths": {
    "/books": {
      "get": {
        "summary": "Obtener todos los libros",
        "responses": {
          "200": {
            "description": "Respuesta exitosa",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Libro"
              }
            }
          }
        }
      },
      "post": {
        "summary": "Agregar un nuevo libro",
        "parameters": [
          {
            "name": "ID",
            "in": "body",
            "description": "ID del libro a agregar",
            "schema": {
              "$ref": "#/definitions/Libro"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Libro agregado exitosamente"
          }
        }
      },
      "put": {
        "summary": "Editar un libro",
        "parameters": [
          {
            "name": "ID",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "libro",
            "in": "body",
            "description": "Datos del libro a actualizar",
            "schema": {
              "$ref": "#/definitions/Libro"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Libro actualizado exitosamente"
          },
          "404": {
            "description": "Libro no encontrado"
          }
        }
      },
      "delete": {
        "summary": "Eliminar un libro",
        "parameters": [
          {
            "name": "ID",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Libro eliminado exitosamente"
          },
          "404": {
            "description": "Libro no encontrado"
          }
        }
      }
    },
    "/libros/prestamo/": {
      "patch": {
        "summary": "Prestar un libro",
        "parameters": [
          {
            "name": "ID",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Libro prestado exitosamente"
          },
          "404": {
            "description": "Libro no encontrado"
          }
        }
      }
    },
    "/libros/devolucion/": {
      "patch": {
        "summary": "Devolver un libro",
        "parameters": [
          {
            "name": "ID",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Libro devuelto exitosamente"
          },
          "404": {
            "description": "Libro no encontrado"
          }
        }
      }
    },
    "/user": {
      "get": {
        "summary": "Obtener todos los usuarios",
        "responses": {
          "200": {
            "description": "Respuesta exitosa",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Usuario"
              }
            }
          }
        }
      },
      "post": {
        "summary": "Agregar un nuevo usuario",
        "parameters": [
          {
            "name": "usuario",
            "in": "body",
            "description": "Datos del usuario a agregar",
            "schema": {
              "$ref": "#/definitions/Usuario"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Usuario agregado exitosamente"
          }
        }
      },
      "put": {
        "summary": "Actualizar un usuario existente",
        "parameters": [
          {
            "name": "ID",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "usuario",
            "in": "body",
            "description": "Datos del usuario a actualizar",
            "schema": {
              "$ref": "#/definitions/Usuario"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Usuario actualizado exitosamente"
          },
          "404": {
            "description": "Usuario no encontrado"
          }
        }
      },
      "delete": {
        "summary": "Eliminar un usuario",
        "parameters": [
          {
            "name": "ID",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Usuario eliminado exitosamente"
          },
          "404": {
            "description": "Usuario no encontrado"
          }
        }
      }
    }
  },
  "definitions": {
    "Libro": {
      "type": "object",
      "properties": {
        "year": {
          "type": "integer"
        },
        "nombre": {
          "type": "string"
        },
        "autor": {
          "type": "string"
        },
        "paginas": {
          "type": "integer"
        },
        "status": {
          "type": "string"
        }
      }
    },
    "Usuario": {
      "type": "object",
      "properties": {
        "nombre": {
          "type": "string"
        },
        "correoElectronico": {
          "type": "string",
          "format": "email"
        }
      }
    }
  }
}
